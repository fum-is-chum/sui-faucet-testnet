{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
      "lib": ["es2017"],
      "module": "CommonJS",
      "moduleResolution": "node",      
      "target": "es2020",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "build/",
      "rootDir": ".",
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
  },
  "ts-node": {
    "esm": true,
  },
  "exclude": [
    "build",
    "node_modules",
    "scripts"
  ]
}
